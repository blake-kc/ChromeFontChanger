{
  "name": "Discover Fonts Changer",
  "version": "1.0.0",
  "description": "Change Meta Font to Discover Sans",
  "manifest_version": 3,
  "author": "Will Hindenburg",
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["tabs", "activeTab", "storage", "scripting", "webNavigation"],
  "action": {
    "default_title": "Fonts Changer"
  },
  "web_accessible_resources": [
    {
      "resources": ["/assets/fonts/*", "/assets/styles/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "67": "/assets/icon67NotSelected.png"
  }
}
